<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_20"
        android:fillViewport="true"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="171dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_30"
                android:background="@drawable/cbimage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_30"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_5"
                    android:layout_marginRight="@dimen/size_5"
                    android:background="@drawable/ic_line_one" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/size_5"
                    android:background="@drawable/ic_line_two" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/size_5"
                    android:background="@drawable/ic_line_three" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/size_5"
                    android:background="@drawable/ic_line_four" />
            </LinearLayout>


            <TextView
                android:id="@+id/rememberme"
                style="@style/fontStyleApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_30"
                android:layout_marginBottom="@dimen/size_30"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/text5"
                android:textColor="@color/gray_more"
                android:textSize="@dimen/size_23"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam "
                android:textColor="#707070"
                android:textSize="@dimen/size_16"
                android:textStyle="normal"
                tools:ignore="SpUsage" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView"
        android:layout_margin="@dimen/size_20"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_other"
            style="@style/fontStyleApp"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/size_20"
            android:background="@drawable/button_background_rounded"
            android:fontFamily="sans-serif-medium"
            android:text="@string/sign_in"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/size_16"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_other"
            android:layout_marginTop="@dimen/size_20"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="로그인"
            android:textColor="#707070"
            android:textSize="@dimen/size_14"
            android:textStyle="normal" />
    </RelativeLayout>

</LinearLayout>
